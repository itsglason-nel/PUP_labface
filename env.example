# Environment
NODE_ENV=development
PORT=4000

# Database Configuration
DB_HOST=mariadb
DB_PORT=3307
DB_USER=root
DB_PASSWORD=root123
DB_NAME=labface

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# JWT Configuration
JWT_SECRET=change_me_to_a_secure_random_string_in_production

# Attendance Configuration
LATE_THRESHOLD_MINUTES=30
ABSENT_AFTER_MINUTES=30

# Camera Configuration (RTSP URLs)
# Replace {CAM_USER}, {CAM_PASS}, {CAM_IP} with actual camera credentials
CAM_RTSP_C1=rtsp://{CAM_USER}:{CAM_PASS}@{CAM_IP}:554/cam/realmonitor?channel=1&subtype=1
CAM_RTSP_C2=rtsp://{CAM_USER}:{CAM_PASS}@{CAM_IP}:554/cam/realmonitor?channel=2&subtype=1

# Alternative camera configuration format
RTSP_URI_C1=rtsp://admin:password@192.168.1.100:554/cam/realmonitor?channel=1&subtype=1
RTSP_URI_C2=rtsp://admin:password@192.168.1.101:554/cam/realmonitor?channel=1&subtype=1

# Camera credentials (if using separate variables)
CAM_USER=admin
CAM_PASS=password
CAM_IP_1=192.168.1.100
CAM_IP_2=192.168.1.101

# ML Service Configuration
ML_MODEL_PATH=/app/models
ML_CONFIDENCE_THRESHOLD=0.6

# Security (Production)
# HTTPS_CERT_PATH=/path/to/cert.pem
# HTTPS_KEY_PATH=/path/to/key.pem
# CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
